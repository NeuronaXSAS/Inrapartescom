# Configuración para cPanel - Inrapartes
RewriteEngine On

# Configuración para archivos de imagen en carpeta brand
<FilesMatch "\.(png|jpg|jpeg|svg|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# Configuración para archivos CSS y JS
<FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=86400"
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# Configuración para archivos HTML
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "public, max-age=3600"
</FilesMatch>

# Configuración de tipos MIME
AddType image/png .png
AddType image/jpeg .jpg
AddType image/jpeg .jpeg
AddType image/svg+xml .svg
AddType image/webp .webp

# Configuración para favicon
<Files "favicon.ico">
    Header set Cache-Control "public, max-age=31536000"
</Files>

# Redireccionamiento para www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Configuración de compresión
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript
</IfModule>

# Configuración de errores personalizados
ErrorDocument 404 /index.html

# Configuración de seguridad básica
<Files ".htaccess">
    order allow,deny
    deny from all
</Files>

# Bloquear acceso a archivos sensibles
<FilesMatch "\.(log|sql|conf)$">
    order allow,deny
    deny from all
</FilesMatch> 